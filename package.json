{
  "name": "devops-feed-hub",
  "version": "1.0.0",
  "description": "DevOps Feed Hub - Centralized RSS feed aggregator for DevOps and tech news",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ui": "playwright test",
    "test:ui:headed": "playwright test --headed",
    "test:ui:debug": "playwright test --debug"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/jest": "^30.0.0",
    "http-server": "^14.1.1",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "playwright": "^1.57.0"
  },
  "jest": {
    "projects": [
      {
        "displayName": "browser",
        "testEnvironment": "jsdom",
        "testMatch": [
          "**/docs/**/*.test.js"
        ],
        "collectCoverageFrom": [
          "docs/script.js"
        ]
      },
      {
        "displayName": "node",
        "testEnvironment": "node",
        "testMatch": [
          "**/.github/scripts/**/*.test.js"
        ],
        "collectCoverageFrom": [
          ".github/scripts/assign-copilot.js"
        ]
      }
    ]
  },
  "standard": {
    "ignore": [
      "**/*.test.js",
      "**/*.spec.js",
      "tests/**",
      "test/**",
      "playwright.config.js"
    ]
  },
  "dependencies": {
    "@octokit/core": "^7.0.6"
  }
}
