{
	"name": "auto-assign-copilot-action",
	"version": "1.0.0",
	"description": "GitHub Action to automatically assign Copilot to issues based on priority labels",
	"main": "dist/index.js",
	"scripts": {
		"build": "ncc build src/index.js -o dist --license licenses.txt",
		"test": "jest"
	},
	"keywords": [
		"github",
		"actions",
		"copilot",
		"automation",
		"issues"
	],
	"author": "mudman1986",
	"license": "MIT",
	"dependencies": {
		"@actions/core": "^1.11.1",
		"@actions/github": "^6.0.0"
	},
	"devDependencies": {
		"@vercel/ncc": "^0.38.3",
		"jest": "^30.2.0"
	},
	"jest": {
		"testEnvironment": "node",
		"testMatch": ["**/src/**/*.test.js"],
		"collectCoverageFrom": ["src/**/*.js", "!src/**/*.test.js"]
	}
}
